# =========================
# MONITORING (Grafana + Prometheus)
# =========================
MON_ENABLE="true"
MON_DOMAIN="grafana.example.com"

# Containers
GRAFANA_DOCKER_IMAGE="grafana/grafana-oss:latest"
PROM_DOCKER_IMAGE="prom/prometheus:latest"

# Ports (host)
GRAFANA_HTTP_PORT="3000"
PROM_HTTP_PORT="9090"

# Prometheus
PROM_RETENTION="15d"
PROM_SCRAPE_INTERVAL="15s"
PROM_EVALUATION_INTERVAL="15s"
# Comma-separated metrics endpoints. Example: http://127.0.0.1:9641/metrics
PROM_TARGETS_TURN="http://127.0.0.1:9641/metrics"

# Grafana admin (token lives ONLY in mon.env local file)
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASS="CHANGEME"    # only used if you login with user/pass
GRAFANA_API_TOKEN="CHANGEME"     # create a token in Grafana UI later; put real value in env/mon.env (ignored)

# Datasource UID (stable)
GRAFANA_DATASOURCE_PROM_UID="promds"

# Dashboards selection (phase 2)
MON_DASH_APPS="global turn"
MON_DASH_PRUNE="false"
