# Default proxy mode for HTTP vhosts (ninja/live/grafana). Start false = DNS-only.
DNS_HTTP_PROXIED_DEFAULT="false"

# TURN must never be proxied (UDP). This guard is hard-enforced by the script.
DNS_TURN_PROXIED="false"

# TTL "auto" by default. Set to a number (e.g., 300) if you prefer.
DNS_TTL="auto"
