# =========================
# TURN (coturn)
# =========================
TURN_ENABLE="true"
TURN_REALM="example.com"
TURN_USER="testuser"
TURN_PASS="CHANGEME"   # real pass goes in turn.local.env for prod

# Relay ports
TURN_MIN_PORT="49152"
TURN_MAX_PORT="65535"

# Public (advertised) IPs
TURN_PUBLIC_IP4="203.0.113.10"
TURN_PUBLIC_IP6=""

# Local bind IPs (optional; empty = auto)
TURN_LOCAL_IP4=""
TURN_LOCAL_IP6=""

# IPv6 toggle
TURN_IPV6_ENABLE="false"

# Docker image + logging
TURN_DOCKER_IMAGE="coturn/coturn:latest"
TURN_LOG_LEVEL="3"

# Prometheus metrics (local-only)
TURN_PROM_ENABLE="true"
TURN_PROM_ADDR="127.0.0.1"
TURN_PROM_PORT="9641"
